{
    "env": {
        "node": true,
        "browser": true,
        "es2021": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:you-dont-need-lodash-underscore/compatible" //ref: http://you-dont-need.github.io/You-Dont-Need-Lodash-Underscore/
    ],
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "rules": {
        "indent": [
            "error",
            2
        ],
        "linebreak-style": 0,
        "semi": [
            "error",
            "always"
        ],
        "no-path-concat": 0,
        "no-unused-vars": 1,
        "no-param-reassign": 1, // because of https://github.com/airbnb/javascript#functions--reassign-params
        "you-dont-need-lodash-underscore" : 1
    }
}