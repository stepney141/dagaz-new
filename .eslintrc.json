{
    "env": {
        "node": true,
        "browser": true,
        "es2021": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "rules": {
        "indent": [
            "error",
            2
        ],
        "linebreak-style": 0,
        "semi": [
            "error",
            "always"
        ],
        "no-path-concat": 0,
        "no-unused-vars": 1,
        "no-param-reassign": 1 // because of https://github.com/airbnb/javascript#functions--reassign-params
    }
}